.container
  .row
    .col.s12
      %h3 Register
      .row
        = form_for :contact do |f|
          .input-field.col.s12
            = f.label(:name, 'Your username')
            = f.text_field(:name)
          .input-field.col.s12
            = f.label(:email, 'Your email adress')
            = f.text_field(:email)
          .input-field.col.s12
            = f.label(:password, 'Your super secure password')
            = f.password_field(:password)
          = f.submit(class: 'btn green')
        %a.btn.right{href: '/login'} Already have an account?
